<h1>Sign In</h1>
<%= form_with url: sign_in_path do |form|%>
<div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: "email@example.com", required: true, class: "form-control" %>
    </div>

    <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, required: true, class: "form-control", placeholder: "password" %>
    <%= link_to "Forgot your password?", password_reset_path, class: "float-end" %>
    </div>

    <div class="mb-3">
    <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>

