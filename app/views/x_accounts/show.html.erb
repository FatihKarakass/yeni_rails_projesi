<div class="x-account-settings">
  <div class="header-section">
    <h1>X Hesap Ayarları</h1>
    <p class="subtitle">@<%= @x_account.username %> hesabının ayarlarını yönetin</p>
  </div>
  
  <div class="account-info">
    <div class="profile-section">
      <% if @x_account.image.present? %>
        <img src="<%= @x_account.image %>" alt="Profile" width="80" height="80" style="border-radius: 50%; border: 3px solid #1DA1F2;">
      <% else %>
        <div class="profile-placeholder">
          <i class="fas fa-user" style="font-size: 40px; color: #1DA1F2;"></i>
        </div>
      <% end %>
      
              <div class="profile-details">
          <h2>
            <%= link_to "@#{@x_account.username}", "https://x.com/#{@x_account.username}", 
                target: "_blank", 
                class: "x-profile-link",
                title: "X profilini yeni sekmede aç" %>
          </h2>
          <% if @x_account.name.present? %>
            <p class="display-name"><%= @x_account.name %></p>
          <% end %>
          <p class="account-status">
            <span class="status-badge connected">Bağlı</span>
          </p>
        </div>
    </div>
  </div>
  
  <div class="settings-section">
    <h3>Hesap Bilgileri</h3>
    <div class="info-grid">
      <div class="info-item">
        <label>Kullanıcı Adı</label>
        <span>@<%= @x_account.username %></span>
      </div>
      <% if @x_account.name.present? %>
        <div class="info-item">
          <label>Görünen Ad</label>
          <span><%= @x_account.name %></span>
        </div>
      <% end %>
      <div class="info-item">
        <label>Bağlanma Tarihi</label>
        <span><%= @x_account.created_at.strftime("%d %B %Y, %H:%M") %></span>
      </div>
      <div class="info-item">
        <label>Son Güncelleme</label>
        <span><%= @x_account.updated_at.strftime("%d %B %Y, %H:%M") %></span>
      </div>
    </div>
  </div>
  
  <div class="actions-section">
    <h3>Hesap İşlemleri</h3>
    <div class="action-buttons">
      <%= link_to "Bilgileri Düzenle", edit_x_account_path(@x_account), class: "btn btn-primary" %>
      <%= link_to "Geri Dön", x_accounts_path, class: "btn btn-secondary" %>
    </div>
  </div>
  
  <div class="danger-zone">
    <h3>Tehlikeli Bölge</h3>
    <p class="warning-text">Bu işlem geri alınamaz. X hesabınızla olan bağlantı tamamen kesilecektir.</p>
    <%= link_to "X Hesabını Kaldır", x_account_path(@x_account), 
        method: :delete, 
        data: { confirm: "Bu X hesabını kaldırmak istediğinize emin misiniz? Bu işlem geri alınamaz." }, 
        class: "btn btn-danger btn-lg" %>
  </div>
</div>

