<div class="container mt-4">
  <h1>X Post Düzenle</h1>

  <%= form_with model: @x_post, local: true do |form| %>
    <% if @x_post.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@x_post.errors.count, "hata") %> nedeniyle bu post güncellenemedi:</h2>
        <ul>
          <% @x_post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :body, "Post İçeriği", class: "form-label" %>
      <%= form.text_area :body, class: "form-control", rows: 4, maxlength: 280 %>
      <div class="form-text">Maksimum 280 karakter</div>
    </div>

    <div class="mb-3">
      <%= form.label :x_account_id, "X Hesabı", class: "form-label" %>
      <%= form.collection_select :x_account_id, Current.user.x_accounts, :id, :username, { prompt: "X hesabı seçin" }, { class: "form-select" } %>
    </div>

    <div class="mb-3">
      <%= form.label :publish_at, "Yayınlanma Zamanı", class: "form-label" %>
      <%= form.datetime_local_field :publish_at, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :x_post_id, "X Post ID (Opsiyonel)", class: "form-label" %>
      <%= form.text_field :x_post_id, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :content, "Eski İçerik (Uyumluluk için)", class: "form-label" %>
      <%= form.text_area :content, class: "form-control", rows: 3, maxlength: 280 %>
    </div>

    <div class="mb-3">
      <%= form.label :scheduled_at, "Planlanan Zaman (Uyumluluk için)", class: "form-label" %>
      <%= form.datetime_local_field :scheduled_at, class: "form-control" %>
    </div>

    <div class="d-flex gap-2">
      <%= form.submit "Güncelle", class: "btn btn-primary" %>
      <%= link_to "İptal", @x_post, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
